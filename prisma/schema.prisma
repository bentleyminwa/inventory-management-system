generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Wine {
  id           String @id @default(cuid())
  name         String @unique
  type         String
  vintage      Int
  stock        Int
  status       String
  bottleSize   String
  pricePerUnit Float  @default(0.00)
  // imageSrc     ImageSrc?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

